<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_card"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="10dp"
   >

    <FrameLayout
        android:layout_width="9dp"
        android:layout_height="match_parent"
        android:background="@color/warning" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:orientation="vertical"
        android:padding="1dp">


        <TextView
            android:id="@+id/comunicado_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:textColor="#000"
            android:textSize="17sp"
            android:text="ENTREGA DE LIBRETAS" />

        <TextView
            android:id="@+id/comunicado_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:padding="4dp"
            android:textSize="13sp"
            android:layout_marginEnd="9dp"
            android:text="24/08/2019"/>

        <ImageView
            android:id="@+id/comunicado_meganofo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="0.5dp"
            android:layout_marginEnd="90dp"
            android:layout_marginTop="6.5dp"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_megafono" />
        <View
            android:id="@+id/comunicado_division"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/comunicado_titulo"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="5dp"
            android:background="@color/overlay_dark_20"/>

        <TextView
            android:id="@+id/comunicado_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/comunicado_division"
            android:layout_marginStart="10dp"
            android:text="DE:"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/comunicado_nombre"
            android:layout_below="@id/comunicado_division"
            android:layout_marginLeft="5dp"
            android:text="Luis Sanchez"/>

        <TextView
            android:id="@+id/comunicado_mensaje"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comunicado_nombre"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="10dp"
            android:layout_alignParentStart="true"
            android:gravity="left|top"
            android:text="Se le comunica a los padres de familia que el dia 4 de octubre se realizara una reunion para organizar el viaje de promociÃ³n y entrega de libreta. Tambien al fin del reunion podran hacer sus consultas o reclamos"
            android:textColor="@color/overlay_dark_60" />
        <TextView
            android:id="@+id/comunicado_puesto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/comunicado_mensaje"
            android:layout_marginTop="6dp"
            android:layout_marginStart="10dp"
            android:text="Docente."/>




    </RelativeLayout>


</android.support.v7.widget.CardView>